@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;

}


    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-4">
                    <form method="post" class="well">
                        <div class="card">
                            <div class="card-header">
                                <h2>Add or Remove Users</h2>
                            </div>
                            <div class="card-body">
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                <div class="form-check m-1">
                                    <input type="hidden" asp-for="@Model[i].UserId" />
                                    <input type="hidden" asp-for="@Model[i].UserName" />
                                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                    <label class="form-check-label ml-4" asp-for="@Model[i].IsSelected">
                                        @Model[i].UserName
                                    </label>
                                </div>
                                }
                            </div>
                            <div class="card-footer">
                                <input type="submit" value="Update" style="width:auto;" class="btn btn-success">
                                <a asp-action="editrole" asp-route-id="@roleId" style="width:auto;" class="btn btn-danger">Discard</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    