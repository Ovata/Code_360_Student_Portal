@model IEnumerable<Student>


@{
    ViewBag.Title = "Student List";
}

<section id="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li class="active">Dashboard</li>
        </ol>
    </div>
</section>

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-12">
                <div class="list-group">
                    <a asp-controller="home" asp-action="index" class="list-group-item active main-color-bg">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                    </a>
                    <a asp-action="student_details" asp-controller="home" class="list-group-item">
                        <span class="glyphicon glyphicon-list-alt" aria-hidden="true">
                        </span> Student <span class="badge">@_student.GetAllStudent().Count()</span>
                    </a>
                </div>

                <div class="well">
                    <h4>Disk Space Used </h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="23" aria-valuemin="0" aria-valuemax="100" style="width: 23%;">
                            23%
                        </div>
                    </div>
                    <h4>Bandwidth Used</h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="87" aria-valuemin="0" aria-valuemax="100" style="width: 87%;">
                            87%
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-9 col-sm-12">
                <!-- Website Overview -->
                <div class="panel panel-default">
                    <div class="panel-heading main-color-bg">
                        <h3 class="panel-title">Website Overview</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-3">
                            <div class="well dash-box">
                                <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span> @_student.GetAllStudent().Count()</h2>
                                <h4>Users</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="well dash-box">
                                <h2><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> 7</h2>
                                <h4>Pages</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="well dash-box">
                                <h2><span class="glyphicon glyphicon-pencil " aria-hidden="true"></span> 113</h2>
                                <h4>Posts</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="well dash-box ">
                                <h2><span class="glyphicon glyphicon-stats" aria-hidden="true"></span> 134</h2>
                                <h4>Visitors</h4>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Latest Users -->
                <div class="panel panel-default">
                    <div class="panel-heading main-color-bg">
                        <h3 class="panel-title">Student List</h3>
                    </div>
                    <div class="panel-body">
                        <div class=" text-right" style="margin-bottom: 5px !important; display: flex !important; justify-content: space-between !important;" >
                            <input type="search" class="form-control form-group" placeholder="Search" id="userinput" style="width:auto;" />
                            <a class="btn btn-primary" asp-action="create" asp-controller="home" style="height:35px; width:auto;">Add New Student</a>
                        </div>
                        <table class="table table-striped table-hover" style="margin-bottom: 0!important" id="datatable">
                            <tr>
                                <th>Name</th>
                                <th>Gender</th>
                                <th>Nationality</th>
                                <th>Addmission Type</th>
                                <th>MaritalStatus</th>
                                <th>Phone Number</th>
                                <th></th>
                            </tr>
                            @foreach (var student in _student.GetAllStudent())
                            {
                        <tr>
                            <td>@student.Name</td>
                            <td>@student.Gender</td>
                            <td>@student.Nationality</td>
                            <td>@student.AddmissionType</td>
                            <td>@student.MaritalStatus</td>
                            <td>@student.Phone</td>
                            <td class="text-right ml-3">
                                <a style="margin-right:20px" class="glyphicon glyphicon-eye-open" asp-controller="home" asp-action="Student_Details" asp-route-id="@student.Id"></a>
                                <a style="margin-right:20px" class="glyphicon glyphicon-pencil" asp-controller="home" asp-action="edit" asp-route-id="@student.Id"></a>
                                <a style="margin-right:20px" class="glyphicon glyphicon-trash text-danger" asp-action="delete" asp-controller="home" asp-route-id="@student.Id"></a>
                            </td>
                        </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Script{
    <script>CKEDITOR.replace('editor1');</script>
    <script>
        //get the table id
        let table = document.getElementById("datatable");
        //let input = document.getElementById('userinput')
        addEventListener('keyup', function filterTable() {
            //alert("hi");
            let input = document.getElementById('userinput').value;
            let tr, td, txtValue;

            //filter = input;
            tr = table.getElementsByTagName('tr');
            //loop through the table
            for (var i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName('td')[0]; //get the table data on the second column
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toLowerCase().indexOf(input.toLowerCase()) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        });

    </script>
}

