@model HomeDetailsViewModel
@inject IStudentRepository _student

@{
    ViewBag.Title = "Student Details";
    var Image = "~/Images/" + (Model.Student.Photo ?? "coding.jpg");
}

<section id="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li class="active">Dashboard | Details | @Model.Student.Name </li>
        </ol>
    </div>
</section>

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a asp-controller="home" asp-action="index" class="list-group-item ">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                    </a>
                    <a asp-action="student_details" asp-controller="home" class="list-group-item active main-color-bg">
                    <span class="glyphicon glyphicon-list-alt" aria-hidden="true">
                        </span> Student <span class="badge">@_student.GetAllStudent().Count()</span>
                    </a>
                </div>

                <div class="well">
                    <h4>Disk Space Used </h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="23" aria-valuemin="0" aria-valuemax="100" style="width: 23%;">
                            23%
                        </div>
                    </div>
                    <h4>Bandwidth Used</h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="87" aria-valuemin="0" aria-valuemax="100" style="width: 87%;">
                            87%
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9">

                <!-- Website Overview -->
                
                <div class="row justify-content-center m-3">
                    <div class="col-sm-8">
                        <div class="card">
                            <div class="card-header">
                                <h1>@Model.Student.Name</h1>
                            </div>

                            <div class="card-body text-center">
                                <img class="card-img-top" style="width: auto; height: 500px;" src="@Image" asp-append-version="true" />

                                <h4>Student Id : @Model.Student.Id</h4>
                                <h4>MaritalStatus : @Model.Student.MaritalStatus.Value</h4>
                                <h4>Nationality : @Model.Student.Nationality</h4>

                            </div>
                            <div class="card-footer text-center">
                                <a asp-controller="home" asp-action="index" class="btn btn-primary glyphicon">Back</a>
                                @*<a asp-controller="home" asp-action="edit" class="btn btn-primary">Edit</a>
                                <a asp-controller="home" asp-action="Delete" class="btn btn-danger">Delete</a>*@
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
