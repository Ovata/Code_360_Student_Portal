                    <div class="form-group row">
                        <div>
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a class="btn btn-danger" asp-controller="home" asp-action="index">Discard</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>